<h3 class="options__dynamicPrice-div">Price: <span id="dynamic_price_options"></span></h3>
<br>
<div class="options__gridContainer">
	<div class="options__optionCase">
		<div class="options__option">
			<img src="<%= optImage1 %>" class="options__optionImage">
			<br>
			<h2 class="options__optionName"><%= optName1 %></h2>
			<hr>
			<p class="options__optionDescription"><%= optDesc1 %>
				<br><br><i>Price<strong>$<%= optPrice1 %></strong></i></p>
			<button class="options__button" onclick=setCamFlag()>Add</button>
			<button class="options__button" onclick=setNoCamFlag()>Remove</button>
		</div>
	</div>
	<div class="options__optionCase">
		<div class="options__option">
			<img src="<%= optImage2 %>" class="options__optionImage">
			<br>
			<h2 class="options__optionName"><%= optName2 %></h2>
			<hr>
			<p class="options__optionDescription"><%= optDesc2 %>
				<br><br><i>Price<strong>$<%= optPrice2 %></strong></i></p>
			<button class="options__button" onclick=setSeatFlag()>Add</button>
			<button class="options__button" onclick=setNoSeatFlag()>Remove</button>
	    </div>
    </div>
	<div class="options__optionCase">
		<div class="options__option">
			<img src="<%= optImage3 %>" class="options__optionImage">
			<br>
			<h2 class="options__optionName"><%= optName3 %></h2>
			<hr>
			<p class="options__optionDescription"><%= optDesc3 %>
				<br><br><i>Price <strong>$<%= optPrice3 %></strong></i></p>
			<button class="options__button" onclick=setSoundFlag()>Add</button>
			<button class="options__button" onclick=setNoSoundFlag()>Remove</button>
		</div>
	</div>
</div>
<div class="options__nextDiv">
  <a href="/summary2/<%= product.id %>" class="config__next-center" id="nextButton">
	NEXT: Summary
  </a>
</div>  
